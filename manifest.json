{
  "manifest_version": 3,
  "name": "QuickNotes",
  "version": "1.0",
  "description": "Save any selected text on a webpage into a notes file.",
  "permissions": ["storage", "contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
      "default_icon": {
    }
  },
  "commands": {
    "save_selected_text": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save selected text to notes"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
